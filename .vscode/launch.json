  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdb",
      "request": "attach",
      "name": "Attach to gdbserver",
      "executable": "${workspaceRoot}/build/main.out",
      "target": ":55000",
      "remote": true,
      "autorun": ["load"],
      "windows": {
        "gdbpath": "C:/ti/msp430-gcc/bin/msp430-elf-gdb.exe"
      },
      "linux": {
        "gdbpath": "~/ti/msp430-gcc/bin/msp430-elf-gdb"
      },
      "preLaunchTask": "Run GDB Server",
      "postDebugTask": "postdebugKill",
      "cwd": "${workspaceRoot}"
    }
  ]
}
